<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ArendaAvto.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArendaAvto.Auth"
			 x:DataType="vm:AuthViewModel">
	<Grid>
		<TextBlock Grid.Row="0" Text="Авторизация" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="10"/>

		<Grid>
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
				<TextBlock Text="Логин:" FontWeight="ExtraBold" HorizontalAlignment="Center" Padding="10" Margin="0,50,0,0"/>
				<TextBox x:Name="login" Watermark="login" Background="#D0E7FF" Foreground="#333333" BorderBrush="#007ACC"
                    BorderThickness="2" />
				<TextBlock Text="Пароль:" FontWeight="ExtraBold" HorizontalAlignment="Center" Padding="10" />
				<TextBox x:Name="password" Watermark="password" Background="#D0E7FF" Foreground="#333333" BorderBrush="#007ACC"
                    BorderThickness="2"/>

				<TextBlock Text="Капча:" FontWeight="ExtraBold" HorizontalAlignment="Center" Padding="10"/>
				<TextBlock x:Name="captchaText" FontWeight="Bold" HorizontalAlignment="Center" Padding="10" />
				<TextBox x:Name="captchaInput" Watermark="Введите капчу" Background="#D0E7FF" Foreground="#333333" BorderBrush="#007ACC"
                    BorderThickness="2"/>

				<TextBlock Margin="0 10 0 5"/>
				<Button x:Name="EnterButton" Content="Авторизация" Click="autorization"
						HorizontalAlignment="Center"
					Background="#D0E7FF" Foreground="#333333" BorderBrush="#007ACC"
				BorderThickness="2"/>
				<TextBlock Name="ShowMessage" Width="400" FontWeight="ExtraBold" Margin="30,0,0,0" HorizontalAlignment="Center" Padding="5"/>
				<TextBlock Name="ShowMessages" Width="300" FontWeight="ExtraBold" Margin="30,0,0,0" HorizontalAlignment="Center" Padding="5"/>
			</StackPanel>

		</Grid>
	</Grid>
</UserControl>
